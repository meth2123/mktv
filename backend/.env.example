# Base de données PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/iptv_db"

# JWT (même valeur que le proxy)
JWT_SECRET=votre-secret-jwt-tres-long-et-securise-123456789
JWT_EXPIRES_IN=7d

# ========== TEST EN LOCAL (utiliser ces valeurs pour tout lancer en local) ==========
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:5173
PROXY_URL=http://localhost:3001

# ========== PRODUCTION (décommenter et remplacer quand vous déployez) ==========
# APP_URL=https://api.votre-domaine.com
# FRONTEND_URL=https://mon-iptv.vercel.app
# PROXY_URL=https://proxy.votre-domaine.com

# Fedapay (optionnel en dev : pas de clé = paiement mock)
# FEDAPAY_SECRET_KEY=sk_live_xxxxx
# FEDAPAY_ENVIRONMENT=sandbox

# Paiement actif: stripe | fedapay
PAYMENT_PROVIDER=stripe

# Stripe (test)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# Optionnel: devise par defaut si celle demandee n'est pas disponible dans le plan
# STRIPE_DEFAULT_CURRENCY=XOF
# Redirections frontend apres paiement (URL absolue ou chemin relatif)
# PAYMENT_SUCCESS_REDIRECT=/dashboard
# PAYMENT_CANCEL_REDIRECT=/subscribe?cancel=1
# Optionnel si vous ajoutez un webhook signe plus tard
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Resend (emails)
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=noreply@votre-domaine.com

# Optionnel: SMS (Africa's Talking, Twilio)
# SMS_PROVIDER=africas_talking
# AFRICAS_TALKING_API_KEY=xxxxx
